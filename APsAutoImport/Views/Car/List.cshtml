@model CarListViewModel


<h1>@Model.CurrentCategory</h1>
<div class=" row row-cols-1 row-cols-md-3 g-4">

    @foreach (var car in Model.Cars)
    { 
        <div>
             <div class="col">
                 <div class="card car-card">
                        <img src="@car.ImageUrl" class="card-img-top" alt="@car.Make @car.Model @car.Year">
                        <div class="card-body card-button">
                            <h4 class=" d-grid"></h4>

                            <div class="d-flex justify-content-between mt-2">
                            <h2 class="text-start">
                                <a class="car-link text-black text-decoration-none" asp-controller="Car" asp-action="Details" asp-route-id="@car.CarId">@car.Year @car.Make @car.Model </a>
                            </h2>
                            <h5 class="text-nowrap">@car.Price.ToString("c")</h5>
                                   
                            </div>
                        </div>                   
                </div>
             </div>
         </div>
    }
 </div>
